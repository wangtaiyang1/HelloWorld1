<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".WangMiActivity">

    <EditText
        android:layout_marginTop="10dp"
        android:paddingTop="15dp"
        android:id="@+id/et01"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:textSize="20dp"
        android:textColor="#c6ff00"
        android:hint="用户名"
        android:background="@drawable/bg_btn03"
        android:paddingLeft="20dp"/>

    <EditText
        android:layout_below="@id/et01"
        android:paddingTop="10dp"
        android:id="@+id/et02"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:textSize="20dp"
        android:textColor="#c6ff00"
        android:hint="重置密码"
        android:inputType="textPassword"
        android:background="@drawable/bg_btn03"
        android:paddingLeft="20dp"/>
    <EditText
        android:layout_below="@id/et02"
        android:paddingTop="10dp"
        android:id="@+id/et03"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:textSize="20dp"
        android:textColor="#c6ff00"
        android:hint="请再次输入密码"
        android:inputType="textPassword"
        android:background="@drawable/bg_btn03"
        android:paddingLeft="20dp"/>
    <Button
        android:id="@+id/btn_login"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/et03"
        android:layout_marginTop="40dp"
        android:background="@drawable/bg_btn05"
        android:text="确定修改"
        android:gravity="center"
        android:textSize="25dp"
        android:textColor="#e8eaf6"/>


</RelativeLayout>